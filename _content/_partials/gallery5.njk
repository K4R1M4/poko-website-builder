{% css %}

/* Gallery */
.gallery5 {
    display: grid;
    gap: 0.5rem;
    grid-template-columns: repeat(7, 1fr);
    /* grid-template-rows: repeat(4, 5rem); */
}
.gallery5 > img {
    grid-column: unset;
    grid-row: unset;
    block-size: 100%;

    &:first-child {
        grid-column: 1 / 3;
        grid-row: 1 / 3;
        aspect-ratio: 1.1;
    }
    &:nth-child(2) {
        grid-column: 3 / 6;
        grid-row: 1 / 3;
        aspect-ratio: 1.6;
    }
    &:nth-child(3) {
        grid-column: 6 / 8;
        grid-row: 1 / 5;
        aspect-ratio: 0.6;
    }
    &:nth-child(4) {
        grid-column: 1 / 4;
        grid-row: 3 / 5;
        aspect-ratio: 1.6;
    }
    &:nth-child(5) {
        grid-column: 4 / 6;
        grid-row: 3 / 5;
        aspect-ratio: 1.1;
    }
    &:nth-child(5) ~ * {
        display: none;
    }
}

{% endcss %}
